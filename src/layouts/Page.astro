---
import Default from "./Default.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

export interface Props {
    title?: string;
    description?: string;
    image?: string;
    color?: string;
}

const { title, description, image, color } = Astro.props;
---

<Default
    title={title || "aldenasf's blog"}
    description={description || "personal blog"}
    image={image || "blog-placeholder-about.jpg"}
    color={color || "#0f172a"}
>
    <Navbar />
    <slot />
    <Footer />
</Default>
