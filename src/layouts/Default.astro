---
import "../main.css";
interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title || "Blog"}</title>
    </head>
    <body class="font-body bg-gray-800 text-white">
        <slot />
    </body>
</html>
